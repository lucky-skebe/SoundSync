<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CStreamer.Designer.Avalonia.Views.NotificationView" Opacity="{Binding Opacity}" >
  <UserControl.Transitions>
    <DoubleTransition Duration="0:0:0.2" Property="Opacity" />
  </UserControl.Transitions>
  <Border BorderBrush="Red" BorderThickness="1" Background="LightCoral" CornerRadius="5" Padding="4">
    <TextBlock Text="{Binding Text}" FontSize="20"/>
  </Border>
</UserControl>
