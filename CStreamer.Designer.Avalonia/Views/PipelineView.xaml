<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helper="clr-namespace:CStreamer.Designer.Helper.Avalonia;assembly=CStreamer.Designer.Avalonia"
             xmlns:local="clr-namespace:CStreamer.Designer.Avalonia.Controls;assembly=CStreamer.Designer.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CStreamer.Designer.Avalonia.Views.PipelineView"
             DragDrop.AllowDrop="True"
             Background="Transparent">
  <local:PipelineItemsControl Items="{Binding Items}" >
    <local:PipelineItemsControl.ItemsPanel>
      <ItemsPanelTemplate>
        <Canvas />
      </ItemsPanelTemplate>
    </local:PipelineItemsControl.ItemsPanel>
  </local:PipelineItemsControl>
</UserControl>
